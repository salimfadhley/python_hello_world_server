pipeline {
    agent {
        docker { image 'python:latest' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo Hello World!'
            }
        }
        stage('Test') {
            steps {
                sh 'echo Hello World!'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo Hello World!'
            }
        }
    }
}